<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.applocker">
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS"/>
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <application
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".applockmanager.SlashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".applockmanager.activities.CreatePinActivity" />
        <activity android:name=".applockmanager.activities.ConfirmPasswordActivity" />
        <activity android:name=".applockmanager.activities.ListApplicationActivity"/>
        <service android:name=".applockmanager.service.LockAppService"
            android:enabled="true"
            android:exported="true"/>
        <activity android:name=".applockmanager.activities.RequestPasswordActivity"
            android:parentActivityName=".applockmanager.activities.ListApplicationActivity"
            android:theme="@style/RequestPasswordNoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".applockmanager.activities.ListApplicationActivity"/>
        </activity>
    </application>

</manifest>