<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.applocker">

    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher_applock"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_applock"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:name=".applockmanager.SlashScreenActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:name=".applockmanager.activities.CreatePinActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:name=".applockmanager.activities.ConfirmPasswordActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity android:name=".applockmanager.activities.ListApplicationActivity" />
        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"
            android:name=".applockmanager.activities.RequestPasswordActivity"
            android:parentActivityName=".applockmanager.activities.ListApplicationActivity"
            android:theme="@style/RequestPasswordNoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".applockmanager.activities.ListApplicationActivity" />
        </activity>
        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:name=".applockmanager.activities.AppList"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>

        <service
            android:name=".applockmanager.service.AppLockService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:name=".applockmanager.activities.SettingActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:name=".applockmanager.activities.EnterPasswordActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:name=".applockmanager.activities.ChangePasswordActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:name=".applockmanager.activities.ConfirmChangePassword"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:name=".applockmanager.activities.ChangeThemeActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:name=".applockmanager.activities.CreateBackupPassword"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:name=".applockmanager.activities.ConfirmBackupPassword"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
        <activity
            android:hardwareAccelerated="false"
            android:largeHeap="true"
            android:name=".applockmanager.activities.SecurityBackupPassword"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:screenOrientation="portrait"/>
    </application>

</manifest>